package com.cookie.asynctask;

import android.os.AsyncTask;
import android.os.Handler;
import android.os.Message;
import android.widget.TextView;

import com.cookie.MainActivity;
import com.cookie.R;

public class IncrementadorAsyncTask extends AsyncTask<Void, Void, Void> {

	private Handler handler;

	public IncrementadorAsyncTask(TextView textCaixa, TextView textCookiesPorSegundo,
			Long caixaTotal, Long cookiesPorSegundo) {
		this.textCaixa = textCaixa;
		this.textCookiesPorSegundo = textCookiesPorSegundo;
		this.caixaTotal = caixaTotal;
		this.cookiesPorSegundo = cookiesPorSegundo;
	}


	public IncrementadorAsyncTask(Handler handler) {
		this.handler = handler;
	}


	@Override
	protected Void doInBackground(Void... params) {
		
		int flag = 0;
		while (flag < 10) {
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			publishProgress();
		}
		
		return null;
	}
	
	@Override
	protected void onProgressUpdate(Void... values) {
		handler.sendEmptyMessage(ResultadoMessage.UM_SEGUNDO_PASSADO);
	}
	

}
